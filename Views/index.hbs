<p>Hej {{person}}</p>
<p>Du har {{books.length}} bøger</p>

{{#if books}}
<ul>
    {{#each books}}
        <li style="list-style: none;">
            <p>{{this.title}}</p>
            <p>{{this.iban}} - {{this.description}}</p>
        </li>
    {{/each}}
</ul>
{{else}}
<p>Denne person har ingen bøger</p>
{{/if}}

<form action="/add" method="POST">
    <input type="text" placeholder="Title" name="title" id="title" required>
    <input type="text" placeholder="IBAN" name="iban" id="iban" required>
    <input type="text" placeholder="Description" name="description" id="descriptioen" required>
    <button type="submit"> Opret bog</button>
</form>